{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: run selected test",
      "program": "${workspaceRoot}/node_modules/react-scripts/bin/react-scripts.js",
      "args": [
        "test",
        "-i",
        "${relativeFile}",
        "-t",
        "${selectedText}"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: run current file",
      "program": "${workspaceRoot}/node_modules/react-scripts/bin/react-scripts.js",
      "args": [
        "test",
        "${relativeFile}"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: run all",
      "program": "${workspaceRoot}/node_modules/react-scripts/bin/react-scripts.js",
      "args": [
        "test"
      ],
      "console": "integratedTerminal"
    }
  ]
}

{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Tap: run selected test",
      "program": "${workspaceRoot}/node_modules/tap/bin/run.js",
      "args": [
        "-i",
        "${relativeFile}",
        "-t",
        "${selectedText}"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tap: run current file",
      "program": "${workspaceRoot}/node_modules/tap/bin/run.js",
      "args": [
        "${relativeFile}"
      ],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tap: run all",
      "program": "${workspaceRoot}/node_modules/tap/bin/run.js",
      "console": "integratedTerminal"
    }
  ]
}
